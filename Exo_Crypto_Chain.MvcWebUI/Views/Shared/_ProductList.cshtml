@using Exo_Crypto_Chain.MvcWebUI.Models;
@model IEnumerable<ProductModel>

<div class="row row-cols-1 row-cols-md-2 g-4">
    @foreach (var urun in Model)
    {
        <div class="col">
            <div class="card">
                <img src="/Upload/@urun.Image" class="card-img-top" alt="@urun.Name">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="/Home/Details/@urun.Id">@urun.Name</a>
                    </h5>
                    <p class="card-text">@urun.Description</p>
                </div>
                <div class="card-footer">

                    <small class="text-muted">
                        <i class="fa-sharp fa-regular fa-dollar-sign"></i>
                        @urun.Price
                    </small>
                    <a href="/Home/Details/@urun.Id" class="btn btn-default btn-sm float-right">
                        <i class="fa-solid fa-circle-info"></i>
                        Ürünü İncele
                    </a>
                </div>
            </div>
        </div>

    }


</div>